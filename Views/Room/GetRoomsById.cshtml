@model HotelManagementSystem.Dto.RoomDto

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Room Details";
}

<div class="container-fluid pt-4 px-4">
    <div class="bg-secondary text-center rounded p-4">

        <h3>Room Details</h3>
        <div id="slider" class="carousel slide mt-4" data-bs-ride="carousel">
            <div class="carousel-inner">
                @if (Model.Images != null)
                {
                    for (var i = 0; i < Model.Images.Count(); i++)
                    {
                        <div class="carousel-item @(i == 0 ? "active" : "")">
                            <img src="~/RoomImages/@Model.Images[i].ImagePath" class="d-block w-100" style="max-height:300px;  object-fit: cover;" alt="Room image @(i + 1)">
                        </div>
                    }
                }
                else
                {
                    <div class="carousel-item active">
                        <img src="/images/default-room.jpg" class="d-block w-100" alt="Default room image">
                    </div>
                }
            </div>
            <a class="carousel-control-prev" href="#slider" role="button" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </a>
            <a class="carousel-control-next" href="#slider" role="button" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </a>
        </div>
       
        <div class="table-responsive">
            @if (Model != null)
            {
                <table class="table text-start align-middle table-bordered table-hover mb-0">
                    <tbody>
                        <tr>
                            <th scope="row">RoomName</th>
                            <td>@Model.RoomName</td>
                        </tr>
                        <tr>
                            <th scope="row">RoomNumber</th>
                            <td>@Model.RoomNumber</td>
                        </tr>
                        <tr>
                            <th scope="row">RoomType</th>
                            <td>@Model.RoomType</td>
                        </tr>
                        <tr>
                            <th scope="row">Room Status</th>
                            <td>@Model.RoomStatus</td>
                        </tr>
                        <tr>
                            <th scope="row">RoomPrice</th>
                            <td>@Model.RoomRate</td>
                        </tr>
                        <tr>
                            <th scope="row">Amenity</th>
                            <td>@Model.AmenityName</td>
                        </tr>
                        <tr>
                            <th scope="row">Availability</th>
                            <td>@Model.Availability</td>
                        </tr>
                        <tr>
                            <th scope="row">Maximum occupancy</th>
                            <td>@Model.MaxOccupancy</td>
                        </tr>
                        <tr>
                            <th scope="row">RoomBedType</th>
                            <td>@Model.BedType</td>
                        </tr>
                    </tbody>
                </table>
                <div class="booking-section text-center mt-5">
                    <p class="lead">Don't miss out on our exclusive offer! Book your stay now and enjoy a luxurious experience.</p>
                    <p class="mb-4"><span class="arrow">&#8594;</span> Limited-time discount, free breakfast, and more!</p>
                </div>

                <div class="d-flex justify-content-between mt-3">
                    <a href="@Url.Action("Rooms", "Room")" class="btn btn-primary">Back to List</a>
                    <a href="@Url.Action("CreateBooking","Booking")" class="btn btn-primary">Book Now</a>
                </div>
            }
            else
            {
                <p>Room details are not available.</p>
            }
           
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var myCarousel = document.querySelector('#slider');
        var carousel = new bootstrap.Carousel(myCarousel, {
            interval: 2000,
            wrap: true
        });
    });
</script>
