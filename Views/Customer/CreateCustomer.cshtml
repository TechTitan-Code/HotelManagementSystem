@model HotelManagementSystem.Dto.RequestModel.CreateCustomer

@{
    Layout = "_RegisterLayout";
    ViewData["Title"] = "Create Customer";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="col-md-8">
        <!-- Controls form width -->
        <div class="bg-secondary rounded p-4">
            <h6 class="mb-4 text-center">Register</h6>
            <form asp-controller="User" asp-action="CreateUser">
                <div class="row mb-3">
                    <!-- First Name -->
                    <div class="col-md-6">
                        <label class="form-label">First Name</label>
                        <input type="text" class="form-control" name="FirstName" />
                    </div>
                    <!-- Last Name -->
                    <div class="col-md-6">
                        <label class="form-label">Last Name</label>
                        <input type="text" class="form-control" name="LastName" />
                    </div>
                </div>

                <div class="row mb-3">
                    <!-- User Name -->
                    <div class="col-md-6">
                        <label class="form-label">User Name</label>
                        <input type="text" class="form-control" name="UserName" />
                    </div>
                    <!-- Address -->
                    <div class="col-md-6">
                        <label class="form-label">Address</label>
                        <input type="text" class="form-control" name="Address" />
                    </div>
                </div>

                <div class="row mb-3">
                    <!-- Age Range -->
                    <div class="col-md-6">
                        <label class="form-label">Age Range</label>
                        <input asp-for="AgeRange" class="form-control" type="text" />
                    </div>
                    <!-- Email -->
                    <div class="col-md-6">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" name="Email" />
                    </div>
                </div>

                <div class="row mb-3">
                    <!-- Role -->
                    <div class="col-md-6">
                        <label asp-for="Role" class="form-label">Role</label>
                        <select asp-for="Role" class="form-select" asp-items="Html.GetEnumSelectList<HotelManagementSystem.Model.Entity.Enum.UserRole>()">
                            <option value="">Select Role</option>
                        </select>
                    </div>
                    <!-- Gender -->
                    <div class="col-md-6">
                        <label asp-for="Gender" class="form-label">Gender</label>
                        <select asp-for="Gender" class="form-select" asp-items="Html.GetEnumSelectList<HotelManagementSystem.Model.Entity.Enum.Gender>()">
                            <option value="">Select Gender</option>
                        </select>
                    </div>
                </div>

                <div class="row mb-3">
                    <!-- Phone Number -->
                    <div class="col-md-6">
                        <label class="form-label">Phone Number</label>
                        <input type="text" class="form-control" name="PhoneNumber" />
                    </div>
                    <!-- Password -->
                    <div class="col-md-6">
                        <label class="form-label">Password</label>
                        <input type="password" class="form-control" name="PassWord" />
                    </div>
                </div>

                <div class="mt-4 text-center">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a href="@Url.Action("Login","User")" class="btn btn-dark ms-2">Show All</a>
                </div>
            </form>
        </div>
    </div>
</div>
